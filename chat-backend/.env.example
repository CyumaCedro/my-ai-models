# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
# Set DB_TYPE to mysql, postgresql, or sqlite
DB_TYPE=mysql

# MySQL Configuration (used when DB_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=chatdb
MYSQL_USER=chatuser
MYSQL_PASSWORD=chatpass

# PostgreSQL Configuration (used when DB_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=chatdb
POSTGRES_USER=chatuser
POSTGRES_PASSWORD=chatpass

# SQLite Configuration (used when DB_TYPE=sqlite)
SQLITE_DB_PATH=./chatdb.sqlite

# Ollama Configuration
OLLAMA_URL=http://192.168.1.70:11434
OLLAMA_MODEL=deepseek-coder-v2
OLLAMA_REQUEST_TIMEOUT=300000
OLLAMA_KEEP_ALIVE=600

# Performance Settings
CACHE_DURATION=60000
MAX_RESULTS=100
CONNECTION_LIMIT=10
